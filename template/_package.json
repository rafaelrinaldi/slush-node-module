{
  "name": "<%= moduleName %>",
  "version": "1.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= authorGitHub %>/<%= moduleName %>",
  "bugs": {
    "url": "https://github.com/<%= authorGitHub %>/<%= moduleName %>/issues"
  },
  "homepage": "https://github.com/<%= authorGitHub %>/<%= moduleName %>#readme",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorHumanizedUrl %>"
  },
  "main": "index.js",
  "bin": {<% if (hasCli) { %>
    "<%= moduleName %>": "./bin/<%= moduleName %>"
  <% } %>},
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "lint": "xo",
    "test": "npm run lint && tape test.js",
    "postversion": "git push origin master --tags && npm publish"
  },
  "keywords": [
<%= moduleKeywords %>
  ],
  "dependencies": {<% if (hasCli) { %>
    "minimist": "^1.2.0",
    "multiline": "^1.0.2"
  <% } %>},
  "devDependencies": {
    "xo": "^0.10.0",
    "tape": "^4.2.2"
  }
}
